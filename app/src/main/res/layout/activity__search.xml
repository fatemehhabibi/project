<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.android_studio.homefinder.Activity_Search">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="501dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/goal_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:gravity="right"
            android:paddingRight="15dp"
            android:text="هدف"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/enter_goal_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right" />

        <TextView
            android:id="@+id/type_home_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:gravity="right"
            android:paddingRight="15dp"
            android:text="نوع ملک"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/enter_type_home_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right" />

        <TextView
            android:id="@+id/situation_home_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:gravity="right"
            android:paddingRight="15dp"
            android:text="موقعیت ملک"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/map_home_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:gravity="right"
            android:paddingRight="17dp"
            android:text="باید به گوگل مپ وصل شم" />

        <TextView
            android:id="@+id/land_measurement_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="15dp"
            android:gravity="right"
            android:paddingRight="15dp"
            android:text="متراژ(متر مربع)"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/lower_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="right"
            android:inputType="textPersonName"
            android:paddingRight="17dp"
            android:text="پایین ترین متراژ"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/upper_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="right"
            android:inputType="textPersonName"
            android:paddingRight="17dp"
            android:text="بالترین متراژ"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/price_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:gravity="right"
            android:paddingRight="15dp"
            android:text="قیمت(تومان)"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/bm_upper_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="190dp"
                android:ems="10"
                android:gravity="right"
                android:inputType="textPersonName"
                android:paddingRight="17dp"
                android:text="بیشترین رهن/خرید(میلیون)"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/bm_lower_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/bm_upper_price"
                android:width="190dp"
                android:ems="10"
                android:gravity="right"
                android:inputType="textPersonName"
                android:paddingRight="17dp"
                android:text="کمترین رهن/خرید(میلیون)"
                android:textSize="10sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/rent_upper_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="190dp"
                android:ems="10"
                android:gravity="right"
                android:inputType="textPersonName"
                android:paddingRight="17dp"
                android:text="بیشترین اجاره(تومان)"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/rent_lower_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/rent_upper_price"
                android:width="190dp"
                android:ems="10"
                android:gravity="right"
                android:inputType="textPersonName"
                android:paddingRight="17dp"
                android:text="کمترین اجاره(تومان)"
                android:textSize="10sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="جستجو"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
